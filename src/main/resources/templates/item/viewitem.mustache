{{#layout}}
    {{#css}}
        <!-- Bootstrap Core CSS -->
        <link href="/css/bootstrap.min.css" rel="stylesheet">

        <!-- Custom CSS -->
        <link href="/css/myShop.css" rel="stylesheet">
    {{/css}}

    {{#title}}S-mall{{/title}}

    <!-- Title -->
    <div class="row">
        <div class="col-lg-12">
            <h3>상품 VIP</h3>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <table class="table ">
                <thead>
                <tr>
                    <th class="col-md-5">상품명</th>
                    <th>재고</th>
                    <th>수량</th>
                    <th class="col-md-1 text-center">가격</th>
                    <th class="col-md-1 text-center"></th>
                </tr>
                </thead>
                <tbody>
                {{#item}}
                    <tr>
                        <td class="col-sm-9 col-md-7">
                            <div class="media">
                                <input type="hidden" id="hdnItemNo" value="{{id}}"/>
                                <a class=" pull-left"> <img class="media-object" src="/images/product-icon.png"
                                                            style="width: 72px; height: 72px;"> </a>
                                <div class="media-body">
                                    <h4 class="media-heading"><a>{{name}}</a></h4>
                                </div>
                            </div>
                        </td>
                        <td class="col-sm-1 col-md-1" style="text-align: center">
                            <span id="spnQty">{{quantity}}</span>
                        </td>
                        <td class="col-sm-1 col-md-1" style="text-align: center">
                            <input type="email" class="form-control" id="txtOrderQuantity" value="1">
                        </td>

                        <td class="col-sm-1 col-md-1 text-center"><strong id="strCurrency">{{currency}}</strong> <strong
                                id="strPrice">{{price}}</strong></td>
                        <td class="col-sm-1 col-md-1 text-center"><strong>
                            <button type="button" id="btnOrder" class="btn btn-success">
                                주문
                            </button>
                        </strong></td>
                    </tr>
                {{/item}}
                </tbody>
            </table>
        </div>
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th class="col-md-5">상세설명</th>
                </tr>
                </thead>
                {{#item}}
                <tbody id="tbodyDetail">
                <tr>
                    <td id="tdItemDetail">{{description}}</td>
                </tr>
                {{/item}}
            </tbody>
            </table>
        </div>
    </div>
    <!-- form2 -->
    <div style="display:none;">
        <form id="orderForm"  method="get">
            <div>
                {{#item}}
                    <input name="ItemNo" id="txtItemNo" type="text" value="{{id}}">
                    <input type="text" id="txtOrderQty" name="OrderQty" value="0">
                {{/item}}
            </div>
        </form>
    </div>
    <!-- /.row -->
    {{#script}}
        <script type="text/javascript" src="/js/jquery.js"></script>

        <script type="text/javascript" src="/js/webapp/viewitem.js"></script>
    {{/script}}
{{/layout}}